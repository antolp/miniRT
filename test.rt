# Camera facing +Z axis
C 0.0,2.5,-10.0 0.0,-0.2,1.0 45.0

# Dark blue background
BG 10,10,40

# Strong key light from above-left
L -15.0,25.0,-35.0 1 255,250,240

# White floor plane, slightly reflective to blend the scene
pl 0.0,-2.0,0.0 0.0,1.0,0.0 255,255,255 idx_refr=0.9 refl=1.90 idx spec=0.20 shine=32.0

